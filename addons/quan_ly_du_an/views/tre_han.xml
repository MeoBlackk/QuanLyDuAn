<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tre_han_tree" model="ir.ui.view">
        <field name="name">tre.han.tree</field>
        <field name="model">tre_han</field>
        <field name="arch" type="xml">
            <tree string="Danh Sách Trễ Hạn" decoration-danger="so_ngay_tre &gt; 0">
                <field name="nhiem_vu_id"/>
                <field name="du_an_id"/>
                <field name="nhan_vien_id"/> 
                <field name="han_chot"/>
                <field name="so_ngay_tre" sum="Tổng ngày trễ"/>
                <field name="canh_bao" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_tre_han_form" model="ir.ui.view">
        <field name="name">tre.han.form</field>
        <field name="model">tre_han</field>
        <field name="arch" type="xml">
            <form string="Chi Tiết Trễ Hạn">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="nhiem_vu_id" placeholder="Tên nhiệm vụ..."/></h1>
                    </div>
                    <group>
                        <group string="Thông tin dự án">
                            <field name="du_an_id"/>
                            <field name="nhan_vien_id"/>
                        </group>
                        <group string="Thời gian">
                            <field name="han_chot"/>
                            <field name="ngay_hien_tai"/>
                            <field name="so_ngay_tre"/>
                            <field name="canh_bao"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tre_han" model="ir.actions.act_window">
        <field name="name">Trễ Hạn</field>
        <field name="res_model">tre_han</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>